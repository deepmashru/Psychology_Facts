<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/backColor">

    <RelativeLayout
        android:id="@+id/aboutActivity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="100.0dip"
            android:layout_height="100.0dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120.0dip"
            app:cardCornerRadius="7.0dip">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#0B0A0A">

                <ImageView
                    android:layout_width="120.0dip"
                    android:layout_height="100.0dip"
                    android:layout_centerInParent="true"
                    android:src="@drawable/deeeep" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20.0dip"
            android:text="@string/app_name"
            android:textColor="@color/maincolor"
            android:textSize="21.0sp" />

        <TextView
            android:id="@+id/detailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appName"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginEnd="30.0dip"
            android:text="@string/psychology_app_detail"
            android:textAlignment="center"
            android:textColor="@color/settingColor"
            android:textSize="15.0sp" />

        <RelativeLayout
            android:id="@+id/idApp"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:layout_below="@id/detailTextView"
            android:layout_marginTop="30.0dip"
            android:background="@color/aboutBackColor"
            android:padding="20.0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textColor="@color/maincolor" />

                <View
                    android:layout_width="20.0dip"
                    android:layout_height="2.0dip"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/getVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version"
                    android:textColor="@color/maincolor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_date"
                    android:textColor="@color/maincolor" />

                <View
                    android:layout_width="20.0dip"
                    android:layout_height="2.0dip"
                    android:layout_gravity="end"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/maincolor" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/detailLinear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idApp"
            android:orientation="vertical"
            android:padding="10.0dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:src="@drawable/ic_email_white_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dip"
                    android:text="@string/contact_us"
                    android:textColor="@color/maincolor"
                    android:textSize="30.0sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:src="@drawable/ic_map_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dip"
                    android:text="Vadodara, India"
                    android:textColor="@color/maincolor"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/factbookLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10.0dip"
                android:layout_marginTop="30.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:src="@drawable/ic_search_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.0dip"
                    android:text="@string/more_apps"
                    android:textColor="@color/maincolor"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="130.0dip"
            android:layout_below="@id/detailLinear"
            android:layout_marginTop="20.0dip"
            android:background="@color/aboutBackColor">

            <TextView
                android:id="@+id/feedbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20.0dip"
                android:text="@string/feedback"
                android:textColor="@color/maincolor"
                android:textSize="21.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedbackText"
                android:layout_marginStart="20.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/ic_gmail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20.0dip"
                    android:layout_marginEnd="10.0dip"
                    android:text="@string/contact_us"
                    android:textColor="@color/maincolor" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_below="@id/relativeLayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/licenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.0dip"
                android:layout_marginTop="20.0dip"
                android:text="@string/licenses"
                android:textColor="@color/maincolor" />

            <View
                android:layout_width="20.0dip"
                android:layout_height="2.0dip"
                android:layout_marginStart="20.0dip"
                android:background="@color/colorAccent" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>