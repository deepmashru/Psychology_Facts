<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.DayNight"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/backColor" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/settings_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_settings_black_24dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:textSize="20sp"
        android:textColor="@color/maincolor"
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_for_setting"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/settings_image"
        />
</RelativeLayout>
